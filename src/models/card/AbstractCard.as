package models.card
{
	import interfaces.ICard;
	import interfaces.IDeck;

	public class AbstractCard implements ICard
	{
		//--------------------------------------------------------------------------
		//
		//  Class Constants
		//
		//--------------------------------------------------------------------------

		//--------------------------------------------------------------------------
		//
		//  Constructor
		//
		//--------------------------------------------------------------------------

		public function AbstractCard()
		{
		}

		//--------------------------------------------------------------------------
		//
		//  Variables
		//
		//--------------------------------------------------------------------------

		//--------------------------------------------------------------------------
		//
		//  Properties
		//
		//--------------------------------------------------------------------------

		//----------------------------------
		//  deck
		//----------------------------------
		private var _deck:IDeck = null;

		public function get deck():IDeck
		{
			return _deck;
		}

		public function set deck(value:IDeck):void
		{
			_deck = value;
		}

		//--------------------------------------------------------------------------
		//
		//  Public Methods
		//
		//--------------------------------------------------------------------------


		public function discard():void
		{
			//TODO: The card should also be taken from the players hand.
			if (deck)
				deck.discard(this);
		}

		public function destroy():void
		{
			//TODO: The card should also be taken from the players hand.
			this.deck = null;
		}

		//--------------------------------------------------------------------------
		//
		//  Protected Methods
		//
		//--------------------------------------------------------------------------

		//--------------------------------------------------------------------------
		//
		//  Private Methods
		//
		//--------------------------------------------------------------------------
	}
}
