	{
		//--------------------------------------------------------------------------
		//
		//  Class Constants
		//
		//--------------------------------------------------------------------------

		//--------------------------------------------------------------------------
		//
		//  Constructor
		//
		//--------------------------------------------------------------------------

		public function SpyResults()
		{
		}

		//--------------------------------------------------------------------------
		//
		//  Variables
		//
		//--------------------------------------------------------------------------

		//--------------------------------------------------------------------------
		//
		//  Properties
		//
		//--------------------------------------------------------------------------

		//----------------------------------
		//  count
		//----------------------------------
		private var _count:int = 0;

		public function get count():int
		{
			return _count;
		}

		//----------------------------------
		//  args
		//----------------------------------
		private var _args:Array;

		public function get args():Array
		{
			if (!_args)
				_args = new Array();

			return _args;
		}

		//--------------------------------------------------------------------------
		//
		//  Public Methods
		//
		//--------------------------------------------------------------------------

		public function appendResult(args:Array):void
		{
			_count++;
			_args = args
		}

